.nested-fields
  = f.input :fallback
  / Add default color options ('good', 'warning', 'danger') with preview
  = f.input :color, as: :minicolors, input_html: { data: { minicolors: {theme: :bootstrap, position: :left } } }
  = f.input :pretext
  = f.simple_fields_for :author do |author|
    = render 'slack/author_fields', f: author
  = f.input :title
  = f.input :title_link, as: :url
  = f.input :text, as: :text
  = f.simple_fields_for :field do |field|
    = render 'slack/field_fields', f: field
  = f.input :image_url, as: :url
  = f.input :thumb_url, as: :url
